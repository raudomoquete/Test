<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Perfil</title>
        <%- include('partials/head.ejs') %>
    </head>
    <body>
        <div class="container">
            <header class="text-center">
                <h1>Perfil</h1>
                <a href="/logout" class="btn btn-light btn-sm">
                    Logout
                </a>
            </header>

            <hr>

            <div class="container">
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="card-title">
                                <span class="fas fa-user"></span> Usuario
                            </h3>
                            <p>
                                <strong>id</strong> <%= user._id %> <br>
                                <strong>email</strong> <%= user.email %> <br>
                                <strong>password</strong> <%= user.password %>
                            </p>
                            <a href="/logout" class="btn btn-light">
                                Logout
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </body>
</html>